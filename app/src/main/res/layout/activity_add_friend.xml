<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.appofy.android.pixshare.AddFriendActivity">

    <!-- Editext for Search -->
    <EditText android:id="@+id/inputFriendSearchByUsername"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Search Friend By Username.."
        android:inputType="textVisiblePassword"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button android:id="@+id/inputFriendSearchBtn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_alignBottom="@+id/inputFriendSearchByUsername"
        android:layout_alignParentEnd="true" />

    <ListView android:id="@+id/list" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/inputFriendSearchByUsername"/>
</RelativeLayout>
