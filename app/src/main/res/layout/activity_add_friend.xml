<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.appofy.android.pixshare.AddFriendActivity"
    android:background="@drawable/background">

    <!-- Editext for Search -->
    <EditText android:id="@+id/inputFriendSearchByUsername"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Search Friend By Username.."
        android:inputType="textVisiblePassword"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/inputFriendSearchBtn" />

    <Button android:id="@+id/inputFriendSearchBtn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_alignBottom="@+id/inputFriendSearchByUsername"
        android:layout_alignParentEnd="true"
        android:background="#ffe57e19"
        android:padding="10dp" />

    <ListView android:id="@+id/list" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Search Results"
        android:id="@+id/textView6"
        android:layout_below="@+id/inputFriendSearchByUsername"
        android:layout_alignParentStart="true" />
</RelativeLayout>
