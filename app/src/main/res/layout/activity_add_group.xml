<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.appofy.android.pixshare.AddGroupActivity">

    <!-- Group Name input text -->
    <EditText android:id="@+id/txtGroupName"
        android:hint="Group Name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"/>

    <!-- Group Submit button -->
    <Button android:id="@+id/btnGroupSubmit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtGroupName"
        android:text="Submit"/>

    <!-- Editext for Friend Search -->
    <EditText android:id="@+id/inputGroupFriendSearch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Search Friends.."
        android:layout_below="@+id/btnGroupSubmit"
        android:inputType="textVisiblePassword"/>

    <!-- List View -->
    <ListView
        android:id="@+id/friendgroup_list_view"
        android:layout_width="fill_parent"
        android:layout_below="@+id/inputGroupFriendSearch"
        android:layout_height="wrap_content" />




</RelativeLayout>
